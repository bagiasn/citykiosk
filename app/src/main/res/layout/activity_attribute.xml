<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.github.bagiasn.code4fun.activities.AttributeActivity">
    <TextView
        android:id="@+id/label_closest_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/closest_location_label"/>
    <Button
        android:id="@+id/button_maps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_map"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/label_documents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/required_documents"
        android:layout_margin="20dp"/>

    <ListView
        android:id="@+id/list_documents"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="20dp"/>
    <TextView
        android:id="@+id/label_services"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/required_services_label"
        android:layout_margin="20dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_services"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"/>

</LinearLayout>
