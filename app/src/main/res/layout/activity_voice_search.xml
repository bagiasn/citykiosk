<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp"
    tools:context="com.github.bagiasn.code4fun.activities.VoiceSearchActivity">
    <TextView
        android:id="@+id/label_voice_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:text="@string/voice_search_text"/>

    <ImageButton
        android:id="@+id/button_voice_search"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/audio_wave"
        android:background="#00000000"
        android:scaleType="centerInside"
        android:layout_gravity="center"
        android:contentDescription="@string/voice_search_button" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/attribute_list_voice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"/>
</LinearLayout>
